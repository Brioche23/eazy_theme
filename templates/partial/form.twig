<section class="bg-eazy-cream  text-eazy-dark">
	<div class="max-w-screen-md mx-auto px-4 py-16 md:py-32 text-center">
		<h5 class="text-sm uppercase tracking-widest pb-3">
			{{ pll_e('Please send us your inquiry') }}
		</h5>
		<div class="mt-12">
			{#
			<form action="mailto:alessio.brioche@gmail.com" method="POST"
				class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
				<div>
					<label for="first-name" class="form-label">First name</label>
					<div class="mt-1">
						<input type="text" name="first-name" id="first-name" autocomplete="given-name"
							class="form-input" />
					</div>
				</div>
				<div>
					<label for="last-name" class="form-label">Last name</label>
					<div class="mt-1">
						<input type="text" name="last-name" id="last-name" autocomplete="family-name"
							class="form-input " />
					</div>
				</div>
				<div class="sm:col-span-2">
					<label for="email" class="form-label">Email</label>
					<div class="mt-1">
						<input id="email" name="email" type="email" autocomplete="email" class="form-input" />
					</div>
				</div>
				<div class="sm:col-span-2">
					<label for="company" class="form-label">Subject</label>
					<div class="mt-1">
						<input type="text" name="subject" id="subject" autocomplete="subject" class="form-input" />
					</div>
				</div>

				<div class="sm:col-span-2">
					<label for="message" class="form-label">Message</label>
					<div class="mt-1">
						<textarea id="message" name="message" rows="4" class="form-area"></textarea>
					</div>
				</div>

				<div class="sm:col-span-2">
					<button type="submit" class="form-submit">
						Send
					</button>
				</div>
			</form>
			#}

			{{post.content}}
		</div>
	</div>
</section>

<style>
	.wpcf7-spinner {
		display: none;
	}
</style>