<div class="md:w-3/4">
	{% if post.meta('hero_logo') %}
		<img src={{Image(post.meta('hero_logo')).src | resize(1500)}} class="w-52 pb-6" alt="Logo"/>
	{% endif %}
	<h5 class="text-h5 pb-6">
		{{post.meta('hero_headline')}}</h5>
	<h1 class="font-display text-2xl md:text-3xl lg:text-4xl pb-12">{{post.meta('hero_abstract')}}</h1>
</div>
