<a href="{{post.link}}" class="group flex flex-wrap space-y-4 ">
    <div class="w-full">
        <div class="bg-eazy-pink aspect-square ">
            {% if post.get_thumbnail %}
            <img src={{post.thumbnail.src| resize(500) }} alt="" class="h-full w-full object-cover" />
            {% endif %}
        </div>
        <p class="text-sm font-medium text-eazy-pink pt-4 ">{{post.title}}</p>
    </div>
    <div class="w-full items-end">
        <div class="flex place-content-between space-x-4">
            <p class="text-sm text-eazy-dark">{{post.meta('prezzo')}}â‚¬</p>
            <img src="{{ site.theme.link }}/static/assets/svg/freccialink.svg"
                class="transform group-hover:-translate-x-10 transition duration-300 ease-in-out" alt="arrow" />
        </div>
    </div>
</a>