{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section class="contatti bg-white py-32 ">

            <div class="max-w-screen-xl md:flex md:space-x-20 inside">
                <div class="md:w-1/3">
                    <div>
                        <h5 class="text-xs md:text-sm uppercase tracking-widest pb-3">EAZY GROUP HEADQARTERS</h5>
                        <p class="text-h2 text-eazy-blue">{{post.meta('indirizzo')}}
                        </p>
                        <p class="text-h2 text-eazy-blue">{{post.meta('cap')}} {{post.meta('citta')}},
                            {{post.meta('stato')}}
                        </p>
                    </div>
                    <div class="pt-10">
                        <h5 class="text-xs md:text-sm uppercase tracking-widest pb-3"> {{pll_e('Contacts')}}</h5>
                        <p class="text-h2 text-eazy-blue">{{post.meta('telefono')}}
                        </p>
                        <p class="text-h2 text-eazy-blue">
                            <a href="mailto:{{post.meta('mail')}}">{{post.meta('mail')}}</a>
                        </p>
                    </div>
                    <div class="pt-10">
                        <h5 class="text-xs md:text-sm uppercase tracking-widest pb-3">SOCIAL</h5>


                        {% for s in post.meta('social') %}
                        <p class="text-h2 text-eazy-blue">
                            <a href="{{s.link}}">{{s.nome}}</a>
                        </p>
                        {% endfor %}
                    </div>
                </div>
                <div class="pt-10 md:pt-0 md:w-2/3">
                    <div class="bg-eazy-blue h-full w-full aspect-square md:aspect-auto">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2850.6175648215817!2d8.948523514806615!3d44.39997171183933!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12d3430519fa0845%3A0xccf0b0216efd5d3d!2sEAZY%20GREEN!5e0!3m2!1sit!2sit!4v1658931800332!5m2!1sit!2sit" class="w-full h-full" width="100%" height="100%"  style="border:0;" allowfullscreen="true" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
        </section>

        {% block form %}
        {% include 'partial/form.twig' %}
        {{ function('wp_footer') }}
        {% endblock %}
    </article>
</div><!-- /content-wrapper -->
{% endblock %}