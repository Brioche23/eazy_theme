{% extends "base.twig" %} {% block content %} {% include
"partial/wa_button.twig" with {'number': options.group_wa} %}
<div class="content-wrapper">
  <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
    <section
      id="contatti"
      class="bg-white page-section mt-20 lg:mt-0 flex place-content-center"
    >
      <div class="section-wrapper w-full my-auto md:flex md:space-x-20">
        <div class="md:w-1/3">
          <div>
            <h5 class="text-h5 pb-3">EAZY GROUP HEADQARTERS</h5>
            <p class="text-eazy-blue text-xl">{{ post.meta("indirizzo") }}</p>
            <p class="text-eazy-blue text-xl">
              {{ post.meta("cap") }} {{ post.meta("citta") }},
              {{ post.meta("stato") }}
            </p>
            <p class="text-eazy-blue text-xl">{{ post.meta("telefono") }}</p>
            <p class="text-eazy-blue text-xl hover:underline">
              <a href="mailto:{{ post.meta('mail') }}">{{
                post.meta("mail")
              }}</a>
            </p>
          </div>
          <div class="pt-10">
            <h5 class="text-h5 pb-3">Eazy Bunker</h5>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="mailto:bunker@eazybunker.com">bunker@eazybunker.com</a>
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="https://www.instagram.com/eazy_bunker/" target="_blank"
                >Instagram</a
              >
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="https://www.facebook.com/eazybunker" target="_blank"
                >Facebook</a
              >
            </p>
          </div>
          <div class="pt-10">
            <h5 class="text-h5 pb-3">Eazy Green</h5>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="mailto:info@eazygreen.net">info@eazygreen.net</a>
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="https://www.instagram.com/eazy_green_/" target="_blank"
                >Instagram</a
              >
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="https://www.facebook.com/eazygreen.net" target="_blank"
                >Facebook</a
              >
            </p>
          </div>
          <div class="pt-10">
            <h5 class="text-h5 pb-3">Eazy Yachting</h5>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="mailto:agency@eazyachting.com">agency@eazyachting.com</a>
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a href="https://www.instagram.com/eazy_yachting/" target="_blank"
                >Instagram</a
              >
            </p>
            <p class="text-eazy-blue hover:underline text-xl">
              <a
                href="https://www.facebook.com/profile.php?id=100063747034109"
                target="_blank"
                >Facebook</a
              >
            </p>
          </div>
        </div>
        <div class="pt-10 md:pt-0 md:w-2/3">
          <a
            href="https://goo.gl/maps/Nq49yJEv2MMTSpsM8"
            target="_blank"
            class="block bg-eazy-blue h-full w-full aspect-square relative group overflow-hidden"
          >
            <div
              class="opacity-0 group-hover:opacity-100 absolute right-0 bottom-0 bg-eazy-blue text-white text-sm p-6 transition-opacity duration-300 ease-in-out"
            >
              Open in Google Maps
            </div>

            <img
              src="{{ site.theme.link }}/static/assets/eazygroup-mappa-2.png"
              alt="mappa"
              class="object-cover"
            />
