{% extends "base.twig" %}

{% block content %}
<div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section id="contatti" class="bg-white page-section mt-20 lg:mt-0 flex place-content-center">

            <div class="section-wrapper w-full my-auto md:flex md:space-x-20">
                <div class="md:w-1/3">
                    <div>
                        <h5 class="text-h5 pb-3">EAZY GROUP HEADQARTERS</h5>
                        <p class="text-h2 text-eazy-blue">{{post.meta('indirizzo')}}
                        </p>
                        <p class="text-h2 text-eazy-blue">{{post.meta('cap')}}
                            {{post.meta('citta')}},
                            {{post.meta('stato')}}
                        </p>
                    </div>
                    <div class="pt-10">
                        <h5 class="text-h5 pb-3">
                            {{pll_e('Contacts')}}</h5>
                        <p class="text-h2 text-eazy-blue">{{post.meta('telefono')}}
                        </p>
                        <p class="text-h2 text-eazy-blue hover:underline">
                            <a href="mailto:{{post.meta('mail')}}">{{post.meta('mail')}}</a>
                        </p>
                    </div>
                    <div class="pt-10">
                        <h5 class="text-h5 pb-3">SOCIAL</h5>


                        {% for s in post.meta('social') %}
                        <p class="text-h2 text-eazy-blue hover:underline">
                            <a href="{{s.link}}">{{s.nome}}</a>
                        </p>
                        {% endfor %}
                    </div>
                </div>
                <div class="pt-10 md:pt-0 md:w-2/3">
                    <div class="bg-eazy-blue h-full w-full aspect-square md:aspect-video">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2850.6175648215817!2d8.948523514806615!3d44.39997171183933!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12d3430519fa0845%3A0xccf0b0216efd5d3d!2sEAZY%20GREEN!5e0!3m2!1sit!2sit!4v1658931800332!5m2!1sit!2sit"
                            class="w-full h-full" width="100%" height="100%" style="border:0;" allowfullscreen="true"
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        <!-- <a href="{{post.meta('link_maps')}}" target="_blank">
							                            <img src="{{ Image(post.meta('immagine_mappa')).src }}" alt="">
							                        </a> -->
                    </div>
                </div>
            </div>

        </section>

        {% block form %}
        {% include 'partial/form.twig' %}
        {{ function('wp_footer') }}
        {% endblock %}
    </article>
    <section>
        <div class="grid grid-cols-3">

            {% for p in post.meta('banner_pagine') %}
            <a href={{p.pagina}} class="group">
                <div class="bg-eazy-cream inside text-white  py-32 md:py-56 h-full bg-center bg-cover flex place-content-end"
                    style="background-image:url('{{ Image(p.sfondo).src }}')">

                    <p class="text-2xl group-hover:underline">
                        {{p.nome}}
                    </p>
                </div>
            </a>
            {% endfor %}
        </div>
    </section>
</div>
<!-- /content-wrapper -->
{% endblock %}