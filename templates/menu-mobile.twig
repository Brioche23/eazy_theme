{% if menu_mobile %}

	<ul class="w-full flex flex-wrap divide-y">
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }} w-full py-6 text-white text-xs tracking-wider">
				<a target="{{ item.target }}" href="{{ item.link }}" class="uppercase hover:underline transition duration-300 ease-in-out">{{
			item.title }}
				</a>
				{% if item.children %}
					<ul class="nav-drop">
						{% for child in item.children %}
							<li class="nav-drop-item pt-3">
								<a href="{{ child.link }}" class=" hover:underline transition duration-300 ease-in-out">{{ child.title }}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>

{% endif %}
